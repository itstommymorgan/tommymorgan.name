  <h2>Experience</h2>
  <% data.job_history.each do |role| %>
    <div class="role">
      <div class="role-heading">
        <div class="main-role">
          <% if role.main_role %>
            <%= role.main_role %> |
          <% end %>
          <%= role.company %>
          |
          <%= role.start_year %>&mdash;<%= role.end_year %>
        </div>
        <% if role.other_roles %>
          <% role.other_roles.each do |other_role| %>
            <div class="other-role">
              <%= other_role.title %> | <%= other_role.start_year %>&mdash;<%= other_role.end_year %>
            </div>
          <% end %>
        <% end %>
        <% if role.company_description %>
          <div class="company-description"><%= role.company_description %></div>
        <% end %>
      </div>
      <div class="role-body">
        <p><%= role.description %></p>
        <% if role.bullets %>
          <ul>
            <% role.bullets.each do |bullet| %>
              <li><%= bullet %></li>
            <% end %>
          </ul>
        <% end %>
    </div>
  <% end %>

  <h2>Technical Skills</h2>
